<style>
.dropbtn {
  background-color: pink;
  color: w#000;
  padding: 16px;
  font-size: 16px;
  border: none;
}

.dropdow {
  position: relative;
  display: inline-block;
}

.dropdow-content {
  display: none;
  position: absolute;
  background-color: #f1f1f1;
  min-width: 160px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
}

.dropdow-content a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}

.dropdow-content a:hover {background-color: #ddd;}

.dropdow:hover .dropdow-content {display: block;}

.Dropdown_button:hover .dropbtn {background-color: #f1f1f1;}
</style>
</head>


<div class="dropdown row">
   {% for key,val in data %}
      <div class="col-1"><img src={{ val.img | image_style('medium') }}>
      <a class="text-center dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="{{ val.tid }}">{{ val.term_name }}</a>
      </div> 
      {% for test in val.child %}
         <div class="dropdown-menu">
            <a class="dropdown-item" href="#">{{ test.term_name }}</a>
         </div>
      {% endfor %} 
   {% endfor %}
</div>


  